<UserControl
    x:Class="BiliBili_WinUI_Desktop.Components.Controls.RenderTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BiliBili_WinUI_Desktop.Components.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel>
        <controls:MarkdownTextBlock
            x:Name="richBlock"
            Background="Transparent"
            FontFamily="{CustomResource Basic}"
            FontSize="{x:Bind FontSize, Mode=OneWay}"
            Foreground="{x:Bind Foreground, Mode=OneWay}"
            Header1FontSize="{x:Bind FontSize, Mode=OneWay}"
            Header1FontWeight="Normal"
            ImageStretch="Uniform"
            InlineCodeBackground="Transparent"
            InlineCodeBorderThickness="0"
            InlineCodeForeground="{ThemeResource SecondaryColor}"
            InlineCodeMargin="0"
            InlineCodePadding="0"
            IsTextSelectionEnabled="True"
            LinkClicked="richBlock_LinkClicked"
            LinkForeground="{ThemeResource SecondaryColor}"
            ParagraphLineHeight="{x:Bind LineHeight, Mode=OneWay}"
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
