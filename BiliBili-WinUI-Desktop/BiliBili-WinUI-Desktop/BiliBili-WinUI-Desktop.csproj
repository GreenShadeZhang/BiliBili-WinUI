    <Page Update="Components\Widgets\TipPopup.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <Page Update="Components\Widgets\TrimTextBlock.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Components\Widgets\AsyncButton.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
